{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Percentage of Arrivals by Continent for Each State in Malaysia (2020-2023)",
    "fontSize": 20,  
    "anchor": "middle",  
    "color": "black",  
    "font": "Arial"  
  },
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/pluaar/3179_DataVis2/refs/heads/main/continent_percentage_arrivals_2020_2023%20(2).csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "ContinentSelection",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Africa",
          "Antarctica",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Select Continent: "
      }
    },
    {
      "name": "YearSelection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2020,
        "max": 2023,
        "step": 1,
        "name": "Year Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "ContinentSelection === 'All' || datum.continent === ContinentSelection"
    },
    {"filter": "datum.year == YearSelection"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "soe",
      "type": "nominal",
      "title": "State",
      "axis": {
        "labelAngle": 45,
        "labelFontSize": 14,
        "titleFontSize": 18  
      },
      "sort": "-y"
    },
    "y": {
      "field": "percentage_arrivals",
      "type": "quantitative",
      "title": "Percentage of Arrivals",
      "axis": {
        "labelFontSize": 15,  
        "titleFontSize": 18   
      },
      "stack": "normalize"
    },
    "color": {
      "field": "continent",
      "type": "nominal",
      "title": "Continent of Arrival",
      "scale": {
        "domain": [
          "Africa",
          "Antarctica",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "range": [
          "#E41A1C",
          "#4DAF4A",
          "#377EB8",
          "#984EA3",
          "#FF7F00",
          "#FFFF33",
          "#F781BF"
        ]
      },
      "legend": {
        "title": "Continent of Arrival",
        "labelFontSize": 13,
        "titleFontSize": 15,
        "titleFontWeight": "bold"
      }
    },
    "tooltip": [
      {"field": "soe", "type": "nominal", "title": "State"},
      {"field": "continent", "type": "nominal", "title": "Continent"},
      {
        "field": "percentage_arrivals",
        "type": "quantitative",
        "title": "Percentage of Arrivals",
        "format": ".2f"
      }
    ]
  }
}