{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 195,
  "height": 300,
  "description": "Heatmap of Monthly Arrivals for Each State in 2021",
  "data": {
    "url": "https://raw.githubusercontent.com/pluaar/3179_DataVis2/refs/heads/main/monthly_arrivals_2021.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "calculate": "datum.arrivals / 1000",
      "as": "Arrivals_in_Thousands"
    },
    {
      "calculate": "parseInt(datum.month)",
      "as": "MonthNumeric"
    }
  ],
  "mark": {
    "type": "rect",
    "stroke": "beige", 
    "strokeWidth": 0.5
  },
  "encoding": {
    "x": {
      "field": "MonthNumeric",
      "type": "ordinal",
      "title": "Month",
      "sort": "ascending",
      "axis": {
        "titleFontSize": 16,
        "labelFontSize": 15
      }
    },
    "y": {
      "field": "soe",
      "type": "nominal",
      "title": "State of Entry",
      "axis": {
        "titleFontSize": 16,
        "labelFontSize": 15
      }
    },
    "color": {
      "field": "Arrivals_in_Thousands",
      "type": "quantitative",
      "title": "Arrivals (in Thousands)",
      "bin": {
        "maxbins": 15
      },
      "scale": {
        "scheme": "yelloworangered"
      },
      "legend": {
        "title": "Arrivals (Thousands)",
        "format": ",.1f",
        "titleFontSize": 14,
        "labelFontSize": 12
      }
    },
    "tooltip": [
      {"field": "soe", "type": "nominal", "title": "State of Entry"},
      {"field": "MonthNumeric", "type": "ordinal", "title": "Month"},
      {"field": "Arrivals_in_Thousands", "type": "quantitative", "title": "Arrivals (in Thousands)"}
    ]
  },
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}